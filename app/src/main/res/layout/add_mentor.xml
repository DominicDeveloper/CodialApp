<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:hint="Familyasi"
        android:padding="15dp"
        android:background="@color/lightblack"
        android:id="@+id/item_add_mentor_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_add_mentor_surname"
        app:layout_constraintRight_toRightOf="@id/item_add_mentor_surname"
        app:layout_constraintLeft_toLeftOf="@id/item_add_mentor_surname"
        android:hint="Ismi"
        android:background="@color/lightblack"
        android:id="@+id/item_add_mentor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:layout_constraintRight_toRightOf="@id/item_add_mentor_surname"
        app:layout_constraintLeft_toLeftOf="@id/item_add_mentor_surname"
        app:layout_constraintTop_toBottomOf="@id/item_add_mentor_name"
        android:hint="Telefon raqami"
        android:inputType="phone"
        android:background="@color/lightblack"
        android:id="@+id/item_add_mentor_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Qo`shish"
        android:id="@+id/btn_add_mentor"
        app:layout_constraintRight_toRightOf="@id/item_add_mentor_number"
        app:layout_constraintTop_toBottomOf="@id/item_add_mentor_number"
        android:layout_marginTop="10dp"
        android:backgroundTint="#171D3A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>