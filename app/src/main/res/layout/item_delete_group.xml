<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.cardview.widget.CardView
       app:cardCornerRadius="10dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:padding="20dp"
           android:layout_height="match_parent">
           <TextView
               android:text="Ushbu guruhni o`chirmoqchimisiz?\nGuruhni o`chirsangiz uning o`quvchilarixam o`chib ketadi!"
               android:gravity="center_horizontal"
               android:textSize="19sp"
               android:textColor="@color/blur"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_width="match_parent"
               android:id="@+id/mytextdelete"
               android:padding="10dp"
               android:layout_height="wrap_content"/>

           <TextView
               app:layout_constraintTop_toBottomOf="@id/mytextdelete"
               app:layout_constraintRight_toLeftOf="@id/text_yes_del_group"
               android:id="@+id/text_no_del_group"
               android:textSize="19sp"
               android:textColor="@color/blur"
               android:text="Yo`q"
               android:padding="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/text_yes_del_group"
               android:textSize="19sp"
               android:textColor="@color/yellow"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@id/mytextdelete"
               android:text="Xa"
               android:padding="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>