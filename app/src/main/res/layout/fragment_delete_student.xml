<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DeleteStudentFragment">
    <include layout="@layout/custombar_only_for_back"
        android:id="@+id/includebar"/>

    <EditText
        style="@style/Theme.MaterialComponents.DayNight"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/item_edit_talaba_surname"
        app:layout_constraintTop_toBottomOf="@id/includebar"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="15dp"
        android:background="@color/lightblack"
        android:hint="Familyasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        style="@style/Theme.MaterialComponents.DayNight"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:padding="15dp"
        android:hint="Ismi"
        android:id="@+id/item_edit_talaba_name"
        android:background="@color/lightblack"
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="@id/item_edit_talaba_surname"
        app:layout_constraintLeft_toLeftOf="@id/item_edit_talaba_surname"
        app:layout_constraintTop_toBottomOf="@id/item_edit_talaba_surname"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <EditText
        style="@style/Theme.MaterialComponents.DayNight"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:hint="Telefon raqami"
        android:autofillHints="name"
        android:id="@+id/item_edit_talaba_number"
        android:background="@color/lightblack"
        app:layout_constraintRight_toRightOf="@id/item_edit_talaba_name"
        app:layout_constraintLeft_toLeftOf="@id/item_edit_talaba_name"
        app:layout_constraintTop_toBottomOf="@id/item_edit_talaba_name"
        android:padding="15dp"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        style="@style/Widget.MaterialComponents.MaterialCalendar"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/item_edit_talaba_date"
        android:hint="12/12/2022"
        app:layout_constraintTop_toBottomOf="@id/item_edit_talaba_number"
        app:layout_constraintRight_toRightOf="@id/item_edit_talaba_number"
        app:layout_constraintLeft_toLeftOf="@id/item_edit_talaba_number"
        android:padding="15dp"
        android:background="@color/lightblack"
        android:layout_marginTop="10dp"
        android:autofillHints="phone"
        android:autoLink="phone"
        android:inputType="datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_edit_talaba_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/item_edit_talaba_date"
        android:layout_width="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_height="wrap_content">

        <TextView
            android:text="O`zgartirish"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>