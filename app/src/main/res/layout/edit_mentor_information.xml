<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_mentors_surname"
       android:hint="Familyasi"
        android:padding="15dp"
        android:background="@color/lightblack"
        android:layout_width="match_parent"
        android:textColor="@color/blur"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:background="@color/lightblack"
        android:textColor="@color/blur"
        app:layout_constraintTop_toBottomOf="@id/edit_mentors_surname"
        android:id="@+id/edit_mentors_name"
        android:padding="15dp"
        android:hint="Ismi"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textColor="@color/blur"
        android:background="@color/lightblack"
        android:id="@+id/edit_mentors_number"
        android:hint="Telefonm raqami"
        app:layout_constraintTop_toBottomOf="@id/edit_mentors_name"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Yopish"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@id/item_edit_mentor_edit"
        app:layout_constraintTop_toBottomOf="@id/edit_mentors_number"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:id="@+id/item_edit_mentor_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/yellow"
        android:id="@+id/item_edit_mentor_edit"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@id/edit_mentors_number"
        app:layout_constraintTop_toBottomOf="@id/edit_mentors_number"
        android:text="O`zgartirish"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>