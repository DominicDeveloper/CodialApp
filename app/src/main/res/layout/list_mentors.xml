<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:id="@+id/listmentor_name"
           android:text="Dominic Azimov"
          android:textColor="@color/blur"
           android:textSize="23sp"
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <androidx.cardview.widget.CardView
           android:id="@+id/listmentor_edit"
           app:cardCornerRadius="5dp"
           app:cardBackgroundColor="#FFB800"
           app:layout_constraintRight_toLeftOf="@id/listmentor_delete"
           app:layout_constraintTop_toTopOf="@id/listmentor_delete"
           app:layout_constraintBottom_toBottomOf="@id/listmentor_delete"
           android:layout_marginEnd="15dp"
           android:layout_width="40dp"
           android:layout_height="40dp">

           <ImageView
               android:src="@drawable/edit"
               android:layout_width="20dp"
               android:layout_gravity="center"
               android:layout_height="20dp"/>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:id="@+id/listmentor_delete"
           app:cardBackgroundColor="@color/blur"
           app:cardCornerRadius="5dp"
           android:layout_width="40dp"
           android:layout_alignParentEnd="true"
           android:layout_height="40dp">
           <ImageView

               android:layout_gravity="center"
               android:src="@drawable/delete"
               android:layout_width="20dp"
               android:layout_height="20dp"/>

       </androidx.cardview.widget.CardView>


   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>