<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/forcodial"
    tools:context=".HomeFragment">



    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#1E5379"
        android:id="@+id/btn_kurslar"
        app:layout_constraintBottom_toTopOf="@id/btn_guruhlar"
        app:layout_constraintRight_toLeftOf="@id/btn_guruhlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <ImageView
              android:padding="10dp"
              android:src="@drawable/icons8_teacher_100px"
              android:layout_width="120dp"
              android:layout_height="80dp"/>


          <TextView
              android:textSize="18sp"
              android:layout_gravity="center_horizontal"
              android:textColor="@color/light_yellow"
              android:text="Kurslar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>


      </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#1E5379"
        android:id="@+id/btn_guruhlar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/icons8_conference_64px"
                android:layout_width="120dp"
                android:layout_height="80dp"/>


            <TextView
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_yellow"
                android:text="Guruhlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#1E5379"
        android:id="@+id/btn_mentorlar"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_guruhlar"
        app:layout_constraintLeft_toRightOf="@id/btn_guruhlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/icons8_classroom_128px"
                android:layout_width="120dp"
                android:layout_height="80dp"/>


            <TextView
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_yellow"
                android:text="Mentorlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:text="codialuz"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>