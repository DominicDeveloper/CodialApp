<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemgroup_gruruhni_nomi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Guruh nomi"
        android:textSize="18sp"
        android:textColor="@color/blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itemgroup_oquvchilar_soni"
        app:layout_constraintTop_toBottomOf="@id/itemgroup_gruruhni_nomi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/blur"
        android:textSize="12sp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

   <androidx.cardview.widget.CardView
       android:id="@+id/itemgroup_edit"
       android:layout_marginEnd="10dp"
       app:layout_constraintRight_toLeftOf="@id/itemgroup_delete"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:cardCornerRadius="5dp"
       android:layout_width="40dp"
       app:cardBackgroundColor="@color/yellow"
       android:layout_height="40dp">

       <ImageView
           android:layout_gravity="center"
           android:src="@drawable/edit"
           android:layout_width="20dp"
           android:layout_height="20dp"/>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/itemgroup_delete"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:cardCornerRadius="5dp"
       app:cardBackgroundColor="@color/blur"
       android:layout_width="40dp"
       android:layout_height="40dp">
       <ImageView
           android:layout_gravity="center"
           android:src="@drawable/delete"
           android:layout_width="20dp"
           android:layout_height="20dp"/>

   </androidx.cardview.widget.CardView>
 <androidx.cardview.widget.CardView
     android:id="@+id/itemgroup_view"
     android:layout_marginEnd="10dp"
     app:cardBackgroundColor="@color/blur"
     app:layout_constraintRight_toLeftOf="@id/itemgroup_edit"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_width="40dp"
     android:layout_height="40dp">

     <ImageView
         android:layout_gravity="center"
         android:src="@drawable/icons8_eye_240px"
         android:layout_width="20dp"
         android:layout_height="20dp"/>

 </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>